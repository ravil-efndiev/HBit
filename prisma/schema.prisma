datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  sessions      Session[]
  dailyHabits   DailyHabit[]
  weeklyHabits  WeeklyHabit[]
  activities    ActivityType[]
}

model Session {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  expiresAt  DateTime
}

model DailyHabit {
  id         Int       @id @default(autoincrement())
  name       String
  details    String
  iconPath   String
  timeGoal   Int
  timeSpent  Int       @default(0)
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  stats      DailyHabitStat[]
}

model WeeklyHabit {
  id         Int       @id @default(autoincrement())
  name       String
  details    String
  iconPath   String
  days       String[]
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
}

model ActivityType {
  id        Int        @id @default(autoincrement())
  name      String
  details   String
  color     String
  iconPath  String?
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  entries   ActivityEntry[]
}

model ActivityEntry {
  id      Int          @id @default(autoincrement())
  date    DateTime     @default(now())
  note    String
  typeId  Int  
  type    ActivityType @relation(fields: [typeId], references: [id] , onDelete: Cascade)
}

model DailyHabitStat {
  id        Int        @id @default(autoincrement())
  habitId   Int
  habit     DailyHabit @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime 
  completed Boolean
  timeSpent Int

  @@unique([habitId, date])
}
