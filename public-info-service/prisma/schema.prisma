datasource db {
  provider = "postgresql"
}

generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

model PublicUser {
  id        String  @id @default(cuid())
  privateId String  @unique
  username  String  @unique
  name      String
  pfpUrl    String?
}
