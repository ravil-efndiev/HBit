datasource db {
  provider = "postgresql"
}

generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

model PublicUser {
  id         String           @id @default(cuid())
  privateId  String           @unique
  username   String           @unique
  name       String
  pfpUrl     String?
  activities PublicActivity[]
}

model PublicActivity {
  id              String      @id @default(cuid())
  privateId       String
  userId          String
  user            PublicUser  @relation(fields: [userId], references: [id])
  name            String
  iconPath        String
  color           String
  details         String
  lastEntryTime   DateTime?
  totalEntries    Int
  lastWeekEntries Int
}
